<!-- button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/buttonBackgroundPressed" /> <!-- Change to your pressed background color -->
            <corners android:radius="8dp" /> <!-- Adjust radius for rounded corners -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/buttonBackground" /> <!-- Change to your default background color -->
            <corners android:radius="8dp" /> <!-- Adjust radius for rounded corners -->
        </shape>
    </item>
</selector>
